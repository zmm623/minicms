@{
    Layout = "~/Views/admin.cshtml";
}
<script src="/cms/jquery.uploadify.min.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="/cms/uploadify.css">
<div id="left">
    <div class="subnav">
        <div class="subnav-title">
            <a href="#" class='toggle-subnav'><i class="icon-angle-down"></i><span>上传文件</span></a>
        </div>
         <ul class="subnav-menu">
            <li><a href="/explorer/index"><i class="icon-list" ></i>视图</a> </li>
            <li><a href="/explorer/index?type=css"><i class="icon-leaf" ></i>样式</a> </li>
            <li><a href="/explorer/index?type=script"><i class="icon-cogs" ></i>脚本</a> </li>
            <li><a href="/explorer/index?type=images"><i class="icon-film" ></i>图片</a> </li>
             <li><a href="/explorer/upload"><i class="icon-cloud-upload" ></i>上传</a> </li>
        </ul>
    </div>
</div>
<div id="main">
    <div class="container-fluid">
        <div class="container-fluid">

            <div class="row-fluid">
                <div class="span12">
                    <div class="box">
                        <div class="box-title">
                            <h3><i class="icon-upload"></i>文件上传</h3>
                        </div>
                        <div class="box-content">
                            <form class="form-horizontal">
                                <div class="control-group">
                                    <label for="textfield" class="control-label">文件类别</label>
                                    <div class="controls">
                                        <select id="file-type">
                                            <option value="view" selected>视图</option>
                                            <option value="image">图片</option>
                                            <option value="css">样式</option>
                                            <option value="script">脚本</option>
                                        </select>

                                    </div>
                                </div>

                                <div id="queue"></div>
                                <input id="file_upload" name="file_upload" type="file" multiple="true">
                            </form>

                            <script type="text/javascript">

                                $(function () {
                                    $('#file_upload').uploadify({
                                        'formData': {
                                            'type': 'sdfsd',
                                            'token': 'sdfsdfsd'
                                        },
                                        'swf': '/cms/uploadify.swf',
                                        'uploader': 'uploadfiles',
                                        'onUploadStart': function (file) {
                                         
                                            $("#file_upload").uploadify("settings", "formData", { 'type': $('#file-type').val() });
                                        }
                                    });
                                });
                            </script>

                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>
</div>

<script>
    $(document).ready(function () { $('#menu-file').addClass("active"); });


</script>
