@{
    Layout = "~/views/admin.cshtml";
}
<div id="main">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="box">
                    <div class="box-title">
                        <h3><i class="icon-edit"></i>修改密码</h3>
                    </div>
                    <div class="box-content">
                        <form action="changepwd" method='post'>
                            <div class="email">
                                <input type="text" name='oldpwd' placeholder="旧密码" class='input-block-level'>
                            </div>
                            <div class="pw">
                                <input type="password" name="newpwd" placeholder="新密码" class='input-block-level'>
                            </div>
                             <div class="pw">
                                <input type="password" name="cnewpwd" placeholder="确认密码" class='input-block-level'>
                            </div>
                            <div class="submit">
                                <input type="submit" value="登陆" class='btn btn-primary'>
                            </div>
                        </form>
                        <div class="forget">
                            <a href="#"><span>@Model</span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
