@{
    Layout = "~/Views/admin.cshtml";
}

<div id="left">


    <div class="subnav">
        <div class="subnav-title">
            <a href="#" class='toggle-subnav'><i class="icon-angle-down"></i><span>功能</span></a>
        </div>
        <ul class="subnav-menu">
            <li>
                <a href="/block/index"><i class="icon-list-alt"></i>内容</a>
            </li>
           
            <li>
                <a href="/block/editor"><i class="icon-edit"></i>添加内容</a>
            </li>

        </ul>
    </div>

</div>
<div id="main">
    <div class="container-fluid">
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <div class="box">
                        <div class="box-title">
                            <h3><i class="icon-reorder"></i>内容</h3>
                        </div>
                        <div class="box-content">
                            <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">


                              <table class="table table-hover table-nomargin">
                                    <thead>
                                        <tr role="row">
                                            <th class="" role="columnheader" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" >标题</th>
                                            <th class="" role="columnheader" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 104px;">操作</th>
                                            
                                        </tr>
                                    </thead>

                                    <tbody role="alert" aria-live="polite" aria-relevant="all">
                                        @foreach(ikende.minicms.web.Service.Model.TextBlock item in Model.Items)
                                        {
                                        <tr class="odd">
                                            <td class=" sorting_1"><a href="editor?id=@item.ID">@item.Title</a></td>
                                            <td class=" "><a class="btn" onclick="delpost('@item.ID')"><i class="icon-trash"></i>删除</a></td>
                                           
                                        </tr>
                                        }
                                       
                                      
                                    </tbody>
                                </table>
                                    @RenderPage("~/Views/controls/pagebar.cshtml")
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
<script>
    function delpost(id) {
        if (confirm('是否要删除信息块?')) {
            $.post("/block/delblock", { id: id }, function (result) {
                if (!result && result != '') {
                    alert(result);
                }
                else {
                    window.location.reload();
                }
            });
        }
    }

</script>
<script>
    $(document).ready(function () { $('#menu-content').addClass("active"); });


</script>